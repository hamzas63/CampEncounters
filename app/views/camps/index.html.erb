<% if user_signed_in? %>
  <%#= link_to 'ShowProfile', current_camp %>
  <table class='table table-striped table-bordered table-hover'>
  <thead class='thead-dark'>
    <tr>
      <th><%='name' %></th>
      <th>Select</th>
    </tr>
  </thead>

  <tbody>
    <% @camp.each do |camp| %>
      <tr>
        <%# if camp.invitation_accepted? %>
        <td><%= camp.name %></td>
        <%# if !camp.admin? %>
          <td><%= link_to 'Select', camp_path(camp) , class: 'btn btn-outline-danger btn-sm' %></td>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>
