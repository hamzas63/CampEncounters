          <th>STEP NAMES</th>
          <th>Select</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Step 2</td>
          <td><%= link_to 'Continue', application_path(:step2, application: @application) , class: 'btn btn-outline-danger btn-sm' %></td>
        </tr>
        <tr>
          <td>Step 3</td>
          <td><%= link_to 'Continue', application_path(:step3, application: @application) , class: 'btn btn-outline-danger btn-sm' %></td>
