          <td>Step 5</td>
          <td><%= link_to 'Continue', application_path(:step5, application: @application) , class: 'btn btn-outline-danger btn-sm' %></td>
        </tr>
        <tr>
          <td>Step 6</td>
          <td><%= link_to 'Continue', application_path(:step6, application: @application) , class: 'btn btn-outline-danger btn-sm' %></td>
        </tr>
        <tr>
          <td>Step 7</td>
          <td><%= link_to 'Continue', application_path(:step7, application: @application) , class: 'btn btn-outline-danger btn-sm' %></td>
        </tr>
