<%= render 'progress_bar', registration: @registration %>
<%= form_for @registration, method: :put, url: wizard_path do |f| %>
  <%= hidden_field_tag :registration_id, @registration.id %>
  <%= f.label :medicine, "Medicine" %>
  <%= f.text_field :medicine %>

  <div class="actions">
    <% if @registration.progress == 91 %>
      <%= f.submit "Confirm", data: { confirm: 'Are you sure you want to submit the application?' }  %>
    <% end %>
    <%= link_to "skip this step", next_wizard_path %>
    <%= link_to "previous this step", previous_wizard_path %>
  </div>
 <% end %>

<p><%= link_to "Back to List", registrations_path %></p>
