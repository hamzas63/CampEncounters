<% if user_signed_in? %>
  <%= flash[:notice] %>

  <table class='table table-striped table-bordered table-hover'>
  <thead class='thead-dark'>
    <tr>
      <th><%='name' %></th>
      <th>Select</th>
    </tr>
  </thead>
  <tbody>
    <% @camp.each do |camp| %>
      <tr>
        <% if camp.active? %>
          <td><%= camp.name %></td>
          <% if !camp.users.exists?(current_user.id) %>
            <td><%= link_to 'Select', camp_path(camp) , class: 'btn btn-outline-danger btn-sm' %></td>
          <% else %>
            <td><%= link_to 'Select', already_signed_camp_path(camp) , class: 'btn btn-outline-danger btn-sm' %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>
