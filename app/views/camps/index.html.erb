<% if user_signed_in? %>
  <%= flash[:notice] %>

  <table class='table table-striped table-bordered table-hover'>
    <thead class='thead-dark'>
      <tr>
        <th><%= 'name' %></th>
        <th>Select</th>
      </tr>
    </thead>
    <tbody>
      <% @camp.each do |camp| %>
        <tr>
          <% if camp.active? %>
            <td><%= camp.name %></td>
            <td><%= link_to 'Select', already_signed_camp_path(camp), class: 'btn btn-outline-danger btn-sm' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
