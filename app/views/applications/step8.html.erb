<%= render 'progress_bar', application: @application %>
<%= form_for @application, method: :put, url: wizard_path do |f| %>
  <%= hidden_field_tag :application_id, @application.id %>
  <%= f.label :height, "Height" %>
  <%= f.text_field :height %>

  <div class="actions">
    <%= f.submit "Continue" %>
    <%= link_to "skip this step", next_wizard_path %>
    <%= link_to "previous this step", previous_wizard_path %>
  </div>
<% end %>

<p><%= link_to "Back to List", applications_path %></p>
