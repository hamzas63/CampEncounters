<% if user_signed_in? %>
  <table class='table table-striped table-bordered table-hover'>
  <thead class='thead-dark'>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Percentage</th>
      <th>CampName</th>
      <th>Status</th>
      <th>Show</th>
      <th>Delete</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <%# if registration.invitation_accepted? %>
        <td><%= registration.id %></td>
        <td><%= registration.user.first_name %></td>
        <td><%= registration.user.email %></td>
        <td><%= registration.progress %></td>
        <td><%= registration.camp.name %></td>

        <% if registration.progress== 100 %>
          <td>Completed</td>
          <td><%= link_to 'Show', admin_registration_path(registration) , class: 'btn btn-outline-danger btn-sm' %></td>
        <% else %>
          <td>In Progress</td>
          <td></td>
        <% end %>

        <%# if !registration.admin? %>
          <td><%= link_to 'Delete', admin_registration_path(registration), method: :delete, class: 'delete-confirm btn btn-outline-danger btn-sm', remote: :true %></td>
          <td><%= link_to 'Edit', edit_admin_registration_path(registration) , class: 'btn btn-outline-danger btn-sm' %></td>
          <%# end %>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>
