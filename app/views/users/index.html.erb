<%= form_with(url: users_path, method: :get) do |f| %>
  <%= f.text_field :query %>
  <%= f.submit "Search"%>
<% end %>

<%= link_to 'Undo Search', users_path %>

<br/>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Country</th>
      <th>Role</th>
      <th>Delete</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.country %></td>
        <td><%= user.role %></td>
        <% if !user.admin? %>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          <td><%= link_to 'Show', user , class: "btn btn-outline-danger btn-sm" %></td>
          <td><%= link_to 'Edit', edit_user_path(user) , class: "btn btn-outline-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

  <br/>

  <%= link_to 'New User', new_user_path, class:"btn btn-secondary" %>

  <br/>
  <br/>

  <%= pagy_bootstrap_nav(@pagy).html_safe %>
